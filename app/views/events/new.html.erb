<h1>イベント作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@event) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :sub_title %>
      <%= f.text_field :sub_title %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :location %>
      <%= f.text_field :location %>

      <%= f.label :image_url %>
      <%= f.text_field :image_url %>

      <%= f.label :start_time %>
      <%= f.datetime_field :start_time %>

      <%= f.label :end_time %>
      <%= f.datetime_field :end_time %>

      <%= f.label :capacity %>
      <%= f.number_field :capacity %>

      <%= f.submit "作成", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
