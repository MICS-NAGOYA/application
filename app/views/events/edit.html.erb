<h1>イベント編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@event) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :sub_title %>
      <%= f.text_field :sub_title, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.label :location %>
      <%= f.text_field :location, class: 'form-control' %>

      <%= f.label :image_url %>
      <%= f.text_field :image_url, class: 'form-control' %>

      <%= f.label :start_time %>
      <%= f.datetime_field :start_time, class: 'form-control' %>

      <%= f.label :end_time %>
      <%= f.datetime_field :end_time, class: 'form-control' %>

      <%= f.label :capacity %>
      <%= f.number_field :capacity, class: 'form-control' %>

      <%= f.submit "更新", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
